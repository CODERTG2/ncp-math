        async function toggleMemberType(userId, currentType) {
            const newType = currentType === 'Old' ? 'New' : 'Old';
            try {
                const response = await fetch('/api/members/update-type', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        updates: [{ userId, memberType: newType }]
                    })
                });
                const result = await response.json();
                if (result.success) {
                    // Update local list and re-render
                    const student = allStudents.find(s => s._id === userId);
                    if (student) student.memberType = newType;
                    renderMembersTable(allStudents); // Re-render logic handles filtering if robust, but simple for now
