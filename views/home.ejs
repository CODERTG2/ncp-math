<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mu Alpha Theta - NCP</title>
    <link rel="stylesheet" href="css/home.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <div class="logo-placeholder">
                    <i class="fas fa-infinity"></i>
                </div>
                <span class="nav-title">Mu Alpha Theta</span>
            </div>
            <button class="mobile-menu-btn" onclick="document.querySelector('.nav-menu').classList.toggle('active')">
                <i class="fas fa-bars"></i>
            </button>
            <div class="nav-menu">
                <button class="nav-btn" id="resourcesBtn" onclick="window.location.href='/resources'">
                    <i class="fas fa-book"></i>
                    Resources
                </button>
                <button class="nav-btn" id="aiBtn" onclick="window.location.href='/ai'">
                    <i class="fas fa-robot"></i>
                    AI
                </button>
                <% if (typeof user !== 'undefined' && user) { %>
                    <button class="nav-btn" onclick="window.location.href='/dashboard/<%= user.role %>'">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </button>
                    <button class="nav-btn" onclick="window.location.href='/logout'">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </button>
                <% } else { %>
                    <button class="nav-btn" onclick="window.location.href='/mat'">
                        <i class="fas fa-graduation-cap"></i>
                        MAT Portal
                    </button>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Hero Section with Slideshow -->
    <section class="hero-section">
        <div class="slideshow-container">
            <div class="slide active">
                <div class="slide-content">
                    <div class="placeholder-image slide1">
                        <div class="slide-overlay">
                            <h1>Welcome to Mu Alpha Theta</h1>
                            <p>Exploring the infinite possibilities of mathematics</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="scroll-indicator" onclick="document.querySelector('.about-section').scrollIntoView({ behavior: 'smooth' })">
            <span class="scroll-text">Scroll Down</span>
            <div class="scroll-arrow"></div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="about-section">
            <div class="container">
                <h2>About Us</h2>
                <p>Mu Alpha Theta is dedicated to advancing mathematical education and fostering a love for mathematics among students. We provide resources, support, and opportunities for mathematical exploration.</p>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="contact-section" id="contact">
            <div class="container">
                <h2>Contact Us</h2>
                <div class="contact-grid">
                    <div class="contact-card">
                        <div class="contact-icon">
                            <i class="fab fa-instagram"></i>
                        </div>
                        <h3>Follow Us</h3>
                        <p class="contact-placeholder">@ncp.mao</p>
                        <button class="contact-btn" onclick="window.open('https://www.instagram.com/ncp.mao', '_blank')">
                            <i class="fab fa-instagram"></i>
                            Follow on Instagram
                        </button>
                    </div>
                    <div class="contact-card">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h3>Email Us</h3>
                        <p class="contact-placeholder">vwodzien@cps.edu</p>
                        <button class="contact-btn" onclick="window.location.href='mailto:vwodzien@cps.edu'">
                            <i class="fas fa-envelope"></i>
                            Send Email
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>