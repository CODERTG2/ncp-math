<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Hours Tracker - Mu Alpha Theta</title>
    <link rel="stylesheet" href="/css/mat.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .hours-tracker-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .tracker-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

        .tracker-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
            text-align: center;
        }

        .tracker-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            text-align: center;
            margin-top: 0.5rem;
            margin-bottom: 0;
        }

        .back-button {
            background: linear-gradient(135deg, #6b7280, #4b5563);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 2rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .back-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(107, 114, 128, 0.4);
        }

        .hours-table-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border: 1px solid #e5e7eb;
        }

        .hours-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9rem;
        }

        .hours-table th {
            background: linear-gradient(135deg, #f8fafc, #e2e8f0);
            color: #374151;
            font-weight: 600;
            padding: 1rem 0.75rem;
            text-align: center;
            border-bottom: 2px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .student-name-header {
            text-align: left;
            background: linear-gradient(135deg, #f1f5f9, #cbd5e1);
            position: sticky;
            left: 0;
            z-index: 11;
            min-width: 200px;
        }

        .month-super-header {
            background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
            font-weight: 700;
            font-size: 0.95rem;
            border-bottom: 1px solid #94a3b8;
        }

        .sub-header {
            font-size: 0.8rem;
            font-weight: 600;
            padding: 0.75rem 0.5rem;
            min-width: 80px;
        }

        .hours-done-header {
            background: linear-gradient(135deg, #ecfdf5, #d1fae5);
            color: #065f46;
        }

        .required-hours-header {
            background: linear-gradient(135deg, #f8fafc, #e2e8f0);
            color: #475569;
        }

        .hours-table td {
            padding: 0.75rem;
            text-align: center;
            border-bottom: 1px solid #f3f4f6;
            transition: all 0.2s ease;
        }

        .hours-table td:first-child {
            text-align: left;
            font-weight: 600;
            background: #f8fafc;
            position: sticky;
            left: 0;
            z-index: 9;
            border-right: 2px solid #e5e7eb;
        }

        .hours-table td {
            min-width: 80px;
        }

        .hours-cell {
            font-weight: 600;
            border-radius: 6px;
            margin: 2px;
            padding: 0.5rem;
        }

        .hours-done-cell {
            font-weight: 600;
            border-radius: 6px;
            margin: 2px;
            padding: 0.5rem;
        }

        .hours-done-low {
            background-color: #fecaca !important;
            color: #dc2626;
        }

        .hours-done-good {
            background-color: #bbf7d0 !important;
            color: #059669;
        }

        .required-hours-cell {
            font-weight: 600;
            border-radius: 6px;
            margin: 2px;
            padding: 0.5rem;
            background-color: #f1f5f9 !important;
            color: #475569;
        }

        .loading-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 4rem;
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f4f6;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .table-scroll {
            overflow-x: auto;
            max-height: 70vh;
            overflow-y: auto;
        }


        .view-toggle-btn {
            background: white;
            color: #64748b;
            border: 2px solid #e5e7eb;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
        }

        .view-toggle-btn:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
        }

        .view-toggle-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .stats-cell {
            font-weight: 600;
            padding: 0.5rem;
        }

        .stats-good {
            color: #059669;
        }

        .stats-behind {
            color: #dc2626;
        }

        @media (max-width: 768px) {
            .hours-tracker-container {
                padding: 1rem;
            }

            .tracker-title {
                font-size: 2rem;
            }

            .view-toggle-btn {
                padding: 0.5rem 1rem;
                font-size: 0.875rem;
            }

            .hours-table th,
            .hours-table td {
                padding: 0.5rem 0.25rem;
                font-size: 0.8rem;
            }

            .month-super-header {
                font-size: 0.8rem;
            }

            .sub-header {
                font-size: 0.7rem;
                padding: 0.5rem 0.25rem;
                min-width: 60px;
            }

            .student-name-header {
                min-width: 150px;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <div class="logo-placeholder">
                    <i class="fas fa-infinity"></i>
                </div>
                <span class="nav-title">Mu Alpha Theta</span>
            </div>
            <button class="mobile-menu-btn" onclick="document.querySelector('.nav-menu').classList.toggle('active')">
                <i class="fas fa-bars"></i>
            </button>
            <div class="nav-menu">
                <button class="nav-btn" onclick="window.location.href='/resources'">
                    <i class="fas fa-book"></i>
                    Resources
                </button>
                <button class="nav-btn" onclick="window.location.href='/ai'">
                    <i class="fas fa-robot"></i>
                    AI
                </button>
                <button class="nav-btn active">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </button>
                <button class="nav-btn" onclick="window.location.href='/logout'">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="mat-portal">
        <div class="hours-tracker-container">
            <a href="/dashboard/teacher" class="back-button">
                <i class="fas fa-arrow-left"></i>
                Back to Dashboard
            </a>

            <div class="tracker-header">
                <h1 class="tracker-title">Student Hours Tracker</h1>
                <p class="tracker-subtitle">Monitor student attendance hours across the academic year</p>
                <div style="margin-top: 1rem; font-size: 0.9rem; opacity: 0.9;">
                    <strong>Requirements:</strong> 2 hours in September â€¢ 2.5 hours per month from October onwards<br>
                    <strong>Penalty:</strong> Missing hours from October onwards increase future requirements by 50%
                    (rounded down to nearest 0.5)<br>
                    <strong>Note:</strong> September missed hours must be made up but don't create penalties
                </div>
            </div>

            <!-- View Toggle -->
            <div style="margin-bottom: 2rem; display: flex; justify-content: center; gap: 1rem;">
                <button id="monthlyViewBtn" class="view-toggle-btn active" onclick="switchView('monthly')">
                    <i class="fas fa-calendar-alt"></i>
                    Monthly Hours
                </button>
                <button id="statsViewBtn" class="view-toggle-btn" onclick="switchView('statistics')">
                    <i class="fas fa-chart-line"></i>
                    Key Statistics
                </button>
            </div>

            <div class="hours-table-container">
                <div id="loadingContainer" class="loading-container">
                    <div class="loading-spinner"></div>
                </div>

                <div id="tableContainer" style="display: none;">
                    <div class="table-scroll">
                        <table class="hours-table">
                            <thead>
                                <tr>
                                    <th rowspan="2" class="student-name-header">Student Name</th>
                                    <th colspan="2" class="month-super-header">September</th>
                                    <th colspan="2" class="month-super-header">October</th>
                                    <th colspan="2" class="month-super-header">November</th>
                                    <th colspan="2" class="month-super-header">December</th>
                                    <th colspan="2" class="month-super-header">January</th>
                                    <th colspan="2" class="month-super-header">February</th>
                                    <th colspan="2" class="month-super-header">March</th>
                                    <th colspan="2" class="month-super-header">April</th>
                                    <th colspan="2" class="month-super-header">May</th>
                                    <th colspan="2" class="month-super-header">June</th>
                                </tr>
                                <tr>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                    <th class="sub-header hours-done-header">Hours Done</th>
                                    <th class="sub-header required-hours-header">Required</th>
                                </tr>
                            </thead>
                            <tbody id="hoursTableBody">
                                <!-- Table content will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Statistics View Container -->
            <div id="statsTableContainer" style="display: none;">
                <div class="hours-table-container">
                    <div id="statsLoadingContainer" class="loading-container" style="display: none;">
                        <div class="loading-spinner"></div>
                    </div>

                    <div id="statsContentContainer">
                        <div class="table-scroll">
                            <table class="hours-table">
                                <thead>
                                    <tr>
                                        <th class="student-name-header">Student Name</th>
                                        <th>Hours Tutored This Month</th>
                                        <th>Hours Signed Up This Month</th>
                                        <th>Hours Tutored This Year</th>
                                        <th>Hours to Make Up So Far</th>
                                        <th>Hours to Make Up (Whole Year)</th>
                                    </tr>
                                </thead>
                                <tbody id="statsTableBody">
                                    <!-- Statistics content will be populated by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Load student hours data
        async function loadStudentHours() {
            try {
                const response = await fetch('/api/student-hours');
                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error);
                }

                populateTable(data.students);

                // Hide loading and show table
                document.getElementById('loadingContainer').style.display = 'none';
                document.getElementById('tableContainer').style.display = 'block';

            } catch (error) {
                console.error('Error loading student hours:', error);
                document.getElementById('loadingContainer').innerHTML = `
                    <div style="text-align: center; color: #dc2626;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                        <p>Error loading student hours data</p>
                        <button onclick="loadStudentHours()" class="back-button" style="margin: 0;">
                            <i class="fas fa-redo"></i>
                            Retry
                        </button>
                    </div>
                `;
            }
        }

        function populateTable(students) {
            const tbody = document.getElementById('hoursTableBody');
            tbody.innerHTML = '';

            students.forEach(student => {
                const row = document.createElement('tr');

                // Student name cell
                const nameCell = document.createElement('td');
                nameCell.textContent = `${student.firstName} ${student.lastName}`;
                nameCell.style.background = '#f8fafc';
                nameCell.style.position = 'sticky';
                nameCell.style.left = '0';
                nameCell.style.zIndex = '9';
                nameCell.style.borderRight = '2px solid #e5e7eb';
                nameCell.style.fontWeight = '600';
                row.appendChild(nameCell);

                // Month cells (September through June) - now two cells per month
                const months = ['09', '10', '11', '12', '01', '02', '03', '04', '05', '06'];

                months.forEach(month => {
                    const hours = student.monthlyHours[month] || 0;
                    const required = student.monthlyRequirements ? student.monthlyRequirements[month] : (month === '09' ? 2 : 2.5);

                    // Hours Done cell
                    const hoursDoneCell = document.createElement('td');
                    hoursDoneCell.innerHTML = `<div class="hours-done-cell ${hours < required ? 'hours-done-low' : 'hours-done-good'}" title="Hours completed: ${hours}">${hours}</div>`;
                    row.appendChild(hoursDoneCell);

                    // Required Hours cell
                    const requiredCell = document.createElement('td');
                    requiredCell.innerHTML = `<div class="required-hours-cell" title="Required hours: ${required}">${required}</div>`;
                    row.appendChild(requiredCell);
                });

                tbody.appendChild(row);
            });
        }

        // View state
        let currentView = 'monthly';
        let statsData = null;

        // Switch between views
        function switchView(view) {
            currentView = view;

            const monthlyViewBtn = document.getElementById('monthlyViewBtn');
            const statsViewBtn = document.getElementById('statsViewBtn');
            const monthlyContainer = document.getElementById('tableContainer');
            const statsContainer = document.getElementById('statsTableContainer');

            if (view === 'monthly') {
                monthlyViewBtn.classList.add('active');
                statsViewBtn.classList.remove('active');
                monthlyContainer.style.display = 'block';
                statsContainer.style.display = 'none';
            } else {
                monthlyViewBtn.classList.remove('active');
                statsViewBtn.classList.add('active');
                monthlyContainer.style.display = 'none';
                statsContainer.style.display = 'block';

                // Load statistics if not already loaded
                if (!statsData) {
                    loadStudentStatistics();
                }
            }
        }

        // Load student statistics
        async function loadStudentStatistics() {
            const statsLoading = document.getElementById('statsLoadingContainer');
            const statsContent = document.getElementById('statsContentContainer');

            statsLoading.style.display = 'flex';
            statsContent.style.display = 'none';

            try {
                const response = await fetch('/api/all-students-stats');
                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error);
                }

                statsData = data.students;
                populateStatisticsTable(statsData);

                statsLoading.style.display = 'none';
                statsContent.style.display = 'block';

            } catch (error) {
                console.error('Error loading student statistics:', error);
                statsLoading.innerHTML = `
                    <div style="text-align: center; color: #dc2626;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                        <p>Error loading student statistics</p>
                        <button onclick="loadStudentStatistics()" class="back-button" style="margin: 0;">
                            <i class="fas fa-redo"></i>
                            Retry
                        </button>
                    </div>
                `;
            }
        }

        // Populate statistics table
        function populateStatisticsTable(students) {
            const tbody = document.getElementById('statsTableBody');
            tbody.innerHTML = '';

            // Sort students by last name
            students.sort((a, b) => {
                const nameA = `${a.lastName} ${a.firstName}`.toLowerCase();
                const nameB = `${b.lastName} ${b.firstName}`.toLowerCase();
                return nameA.localeCompare(nameB);
            });

            students.forEach(student => {
                const row = document.createElement('tr');

                // Student name cell
                const nameCell = document.createElement('td');
                nameCell.textContent = `${student.firstName} ${student.lastName}`;
                nameCell.style.background = '#f8fafc';
                nameCell.style.position = 'sticky';
                nameCell.style.left = '0';
                nameCell.style.zIndex = '9';
                nameCell.style.borderRight = '2px solid #e5e7eb';
                nameCell.style.fontWeight = '600';
                row.appendChild(nameCell);

                // Hours Tutored This Month
                const tutoredMonthCell = document.createElement('td');
                tutoredMonthCell.innerHTML = `<div class="stats-cell">${student.hoursTutoredThisMonth}</div>`;
                row.appendChild(tutoredMonthCell);

                // Hours Signed Up This Month
                const signedUpMonthCell = document.createElement('td');
                signedUpMonthCell.innerHTML = `<div class="stats-cell">${student.hoursSignedUpThisMonth}</div>`;
                row.appendChild(signedUpMonthCell);

                // Hours Tutored This Year
                const tutoredYearCell = document.createElement('td');
                tutoredYearCell.innerHTML = `<div class="stats-cell">${student.hoursTutoredThisYear}</div>`;
                row.appendChild(tutoredYearCell);

                // Hours to Make Up So Far (with color coding)
                const makeUpSoFarCell = document.createElement('td');
                const makeUpSoFarClass = student.hoursToMakeUpSoFar > 0 ? 'stats-behind' : 'stats-good';
                makeUpSoFarCell.innerHTML = `<div class="stats-cell ${makeUpSoFarClass}">${student.hoursToMakeUpSoFar}</div>`;
                row.appendChild(makeUpSoFarCell);

                // Hours to Make Up Whole Year (with color coding)
                const makeUpWholeYearCell = document.createElement('td');
                const makeUpWholeYearClass = student.hoursToMakeUpWholeYear > 0 ? 'stats-behind' : 'stats-good';
                makeUpWholeYearCell.innerHTML = `<div class="stats-cell ${makeUpWholeYearClass}">${student.hoursToMakeUpWholeYear}</div>`;
                row.appendChild(makeUpWholeYearCell);

                tbody.appendChild(row);
            });
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', () => {
            loadStudentHours();
        });
    </script>
</body>

</html>